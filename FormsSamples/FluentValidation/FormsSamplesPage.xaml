<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			xmlns:local="clr-namespace:FormsSamples" 
			x:Class="FormsSamples.FormsSamplesPage">
	<StackLayout Orientation="Vertical" Padding="20">
		<Label Text="First Name" />
		<Entry x:Name="eFirstName" HorizontalOptions="FillAndExpand" Text="{Binding FirstName}" />
		<Label Text="Middle Name" />
		<Entry x:Name="eMiddleName" HorizontalOptions="FillAndExpand" Text="{Binding MiddleName}" />
		<Label Text="Last Name" />
		<Entry x:Name="eLastName" HorizontalOptions="FillAndExpand" Text="{Binding LastName}" />
		<Button x:Name="BtnClickMe" HorizontalOptions="FillAndExpand" Text="Click To Validate" Clicked="Handle_Clicked" />
		<Label x:Name="lblErrorMessage" Text="{Binding ErrorMessage}" />
	</StackLayout>
</ContentPage>